@model IEnumerable<Book>

@{
    ViewData["Title"] = "ShowBooks";
}

<div class="container p-3 ">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text text-primary">Books</h2>
        </div>
        <div class="text-end col-9">
            <a asp-action="AddBook" class="btn btn-primary mt-2"> 
            <i class="bi bi-plus-square-fill"></i> &nbsp; Add a new book 
            </a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th>
                Cover
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var book in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => book.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => book.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => book.Price)
            </td>
            <td>
                <img src="~/images/@book.imageURL" style="width: 48px;"/>
            </td>
            <td>
                <a asp-action="EditBook" asp-route-id="@book.Id">Edit</a> |
                <a asp-action="BookDetails" asp-route-id="@book.Id">Details</a> |
                <a asp-action="DeleteBook" asp-route-id="@book.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
